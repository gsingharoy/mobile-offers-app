.row
  .col-md-3
    = render partial: 'offers/new_search_form', locals: { attrs: { uid: params[:uid], pub0: params[:pub0], page: params[:page] } }
  .col-md-9
    - if @errors.present?
      .panel.panel-danger
        .panel-body
          %ul
            - @errors.each do |error|
              %li
                = error
    - else
      .panel.panel-default
        .panel-heading
          Found #{@offers.count} offers
        .panel-body
          - if @offers.present?
            %table.table.table-striped.table-hover
              %thead
                %tr
                  %th #
                  %th Title
                  %th Payout
                  %th Thumbnail
              %tbody
                - @offers.each_with_index do |offer, index|
                  %tr
                    %td=(index+1)
                    %td=offer.title
                    %td=offer.payout
                    %td
                      %img.offer-thumbnail{ src: offer.thumbnail }
          - else
            %p
              %em No offers found with the search parameters


